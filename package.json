{
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "css-compile": "tailwindcss build -i resources/css/tailwind/tailwind.css -c resources/js/tailwind.config.js -o resources/css/tailwind/tailwind.css",
    "css-minified": "tailwindcss build -i resources/css/tailwind/tailwind.css -c resources/js/tailwind.config.js -o resources/css/tailwind/minified/tailwind.min.css --minify",
    "css": "npm-run-all --sequential css-*",
    "watch": "npm-run-all build --parallel watch-templates watch-css browsersync",
    "watch-templates": "npm run templates -- --watch",
    "watch-css": "tailwindcss build -i resources/css/tailwind/tailwind.css -c resources/js/tailwind.config.js -o resources/css/tailwind/minified/tailwind.min.css --minify --watch"
  },
  "devDependencies": {
    "axios": "^1.1.2",
    "laravel-vite-plugin": "^0.7.2",
    "lodash": "^4.17.19",
    "postcss": "^8.1.14",
    "vite": "^4.0.0",
    "tailwindcss": "^3.0.7"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "vue": "^3.2.36",
    "vue-loader": "^17.0.1",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2"
  }
}
